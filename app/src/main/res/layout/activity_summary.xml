<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SummaryActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1"
            android:padding="16dp">

            <TableRow
                android:layout_marginBottom="10dp">
                <TextView
                    android:text="정의" />
                <TextView
                    android:id="@+id/justice"
                    android:text="2019년 12월 중국 우한에서 처음 발생한 뒤 전 세계로 확산된, 새로운 유형의 코로나바이러스에 의한 \n호흡기 감염질환. 더보기"
                    android:width="0dp"
                    android:textColor="#000000"/>
            </TableRow>

            <TableRow
                android:layout_marginBottom="10dp">
                <TextView
                    android:text="증상" />
                <TextView
                    android:text="발열, 권태감, 기침, 호흡곤란 및 폐렴 등 경증에서 중증까지 다양한 호흡기감염증이 나타남. 그 외 \n가래, 인후통, 두통, 객혈과 오심, 설사 등도 나타남"
                    android:width="0dp"
                    android:textColor="#000000"/>
            </TableRow>

            <TableRow
                android:layout_marginBottom="10dp">
                <TextView
                    android:text="검사" />
                <TextView
                    android:id="@+id/check"
                    android:text="필수검체는 상기도 검체이며, 하기도 검체는 가래가 있는 환자에서 채취. 검체는 의사, 간호사, 임상병리사가 지정된 장소(선별진료소 등)에서 채취함. 더보기 "
                    android:width="0dp"
                    android:textColor="#000000"/>
            </TableRow>

            <TableRow
                android:layout_marginBottom="10dp">
                <TextView
                    android:text="치료" />
                <TextView
                    android:id="@+id/treatment"
                    android:text="대증 치료로 증상을 완화시킬 수 있지만, 아직까지 질병을 예방하거나 치료하는 것으로 확실하게 밝혀진 특이 치료제는 없음. 더보기"
                    android:width="0dp"
                    android:textColor="#000000"/>
            </TableRow>

            <TableRow
                android:layout_marginBottom="10dp">
                <TextView
                    android:text="긴급연락처"
                    android:layout_marginRight="10dp"/>
                <TextView
                    android:id="@+id/emergency_number"
                    android:text="가까운 선별 진료소, 관할 보건소, 지역콜센터120, \n콜센터 1339"
                    android:width="0dp"
                    android:textColor="#000000"/>
            </TableRow>

            <TableRow
                android:layout_marginBottom="10dp">
                <TextView
                    android:text="관련정보"
                    android:layout_marginRight="10dp"/>
                <TextView
                    android:id="@+id/information"
                    android:text="보도자료, 최신뉴스, SNU 팩트체크, 대응수칙, \n전자출입명부 안내, 네이버 QR체크인 안내"
                    android:width="0dp"
                    android:textColor="#000000"/>
            </TableRow>
        </TableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:padding="15dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/radius_left"
                android:text="선별 진료소"
                android:gravity="center"
                android:id="@+id/medicine"/>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#ffffff"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="정부지원 모음"
                android:id="@+id/government_support"
                android:background="@drawable/radius_left"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#ffffff"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="사회적 거리두기"
                android:id="@+id/social_distancing"
                android:background="@drawable/radius_left"/>

        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#D13B52"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/summary_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="개요"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/domestic_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="국내현황"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/overseas_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="해외현황"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/precaution_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="예방수칙"
            android:textSize="20dp" />
    </LinearLayout>

</RelativeLayout>